{
    "manifest_version": 3,
    "name": "StreamVault Watch Together",
    "description": "Sync Google Drive videos with StreamVault Watch Together rooms",
    "version": "1.0.0",
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "https://drive.google.com/*",
        "https://docs.google.com/*",
        "https://streamvault.live/*",
        "http://localhost:5000/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://drive.google.com/file/d/*/preview*",
                "https://drive.google.com/file/d/*/view*",
                "https://docs.google.com/*"
            ],
            "js": [
                "content-script.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        },
        {
            "matches": [
                "https://streamvault.live/watch-together*",
                "http://localhost:5000/watch-together*"
            ],
            "js": [
                "streamvault-bridge.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}